<img src="<%= @restaurant.photo %>" alt="Logo", width="100px">

<h1><%= @restaurant.name %> 📍</h1>

<p><%= @restaurant.dishes.first.category.name %></p>

<p>Total Votes: <%= @votes %></p>

<h3>Menu</h3>
<ul>
  <% @restaurant.dishes.each do |dish| %>
    <li>
      <img src="<%= dish.photo %>" alt="Dish Photo", width="25px">
      <%= dish.name %>
      <%= dish.votes.map{|vote| vote.vote}.sum %>
      <%= "💲" * (dish.price) %>
    </li>
  <% end %>
</ul>
