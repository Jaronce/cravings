<div class="head-container">

  <div class="coupon-popup">
    <div class="hooray-text">
      <p id="hooray">Hooray!</p>
      <p id="hooray-notification">Weâ€™ve found a coupon for you!</p>
      <a id="redeem" data-toggle="modal" data-target="#exampleModal">
        Redeem Now!
      </a>
    </div>

    <!-- Modal Coupon Code Pop up-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <svg class='qrcode'>
            <%= @svg_string.html_safe %>
          </svg>
          <p>Congrats! You get 15% off your next visit to </p>
          <img id="coupon-gif" src="" alt="Celebrate" style="width:79px;height:84px;">
        </div>
      </div>
    </div>

    <div class="hooray-gif">
      <img id="celebrate-gif" src="https://i.pinimg.com/originals/93/94/fb/9394fb96035f3f7c61b885ae8df208c5.gif" alt="Celebrate" style="width:79px;height:84px;">
    </div>
  </div>

  <div class="coupon-container">
    <img src="<%= @restaurant.photo %>" alt="restaurant photo", width="100px" class="restaurant_photo">

  </div>


  <div class="text_area">
    <h1>
      <%= @restaurant.name %> <i class="fas fa-map-marker-alt"></i>
    </h1>
    <span>
      <%= link_to @restaurant.dishes.first.category.name, dishes_path(category: "Japanese"), class: "category-button"%>
    </span>

  </div>

  <div class="review-container">
    <div class="vote-container">
      <div class="num_box">
        <h1><%= @votes %></h1>
        <h6>satisfied cravers</h6>
      </div>
    </div>
    <% @list.each do |dish| %>
      <div class="container_card_lg">
        <%= link_to dish_path(dish), class: "link-to-dish" do %>
          <div class="card_lg">
            <img src="<%= dish.photo %>" alt="dish photo">
            <div class="flex-grow-1">
              <div class="justify-content-end text-right">
                <span>
                <strong><%= dish.votes.map{|vote| vote.vote}.sum %> <i class="like fas fa-thumbs-up"></i></strong>
                </span>
              </div>
              <div class="card_infos">
                <h2 class="txt"><%= dish.name %></h2>
                <p class="txt_desc"><%= dish.restaurant.name %><%= "$" * (dish.price) %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

