<div class="head-container">
  <img src="<%= @restaurant.photo %>" alt="restaurant photo", width="100px" class="restaurant_photo">


  <div class="text_area">
    <h1><%= @restaurant.name %> 📍</h1>
    <p><%= @restaurant.dishes.first.category.name %></p>

    <div class="vote-container">
        <div class="num_box"><h1><%= @votes %></h1></div>
    </div>

  </div>


  <div class="review-container">
     <h3>Menu</h3>
      <% @list.each do |dish| %>
         <div class="card_lg">
            <ul>
                <li>
                  <img src="<%= dish.photo %>" alt="Dish Photo", width="25px">
                  <div class="review-title">
                    <h2>
                      <%= link_to dish.name, dish_path(dish)%>
                    </h2>
                    <p>
                      <%= dish.votes.map{|vote| vote.vote}.sum %>
                    <%= "💲" * (dish.price) %>
                    </p>
                  </div>
                </li>
            </ul>
         </div>
        <% end %>
    </div>

</div>
